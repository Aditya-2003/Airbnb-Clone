<%if(success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2" role="alert" id="flash-alert-success">
    <strong>Success!</strong> <%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<%if(error && error.length) { %>
<div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2" role="alert" id="flash-alert-error">
    <strong>Error!</strong> <%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<script>
  setTimeout(() => {
    const successAlert = document.getElementById('flash-alert-success');
    if(successAlert){ 
      successAlert.classList.remove('show');
    }
    const errorAlert = document.getElementById('flash-alert-error');
    if(errorAlert) {
      errorAlert.classList.remove('show');
    }
  }, 1500);
</script>
